{
  "name": "atelier",
  "version": "0.2.0",
  "description": "Your vite-powered UI component explorer",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/atelier"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublish": "npm run build --workspace packages/ui",
    "release:bump": "standard-version -s",
    "test": "run-s -ncs test:**",
    "test:plugin-svelte": "npm t --workspace packages/plugin-svelte -- --verbose",
    "test:svelte": "npm t --workspace packages/svelte -- --verbose",
    "test:ui": "npm t --workspace packages/ui -- --verbose"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "standard-version": "^9.3.1"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --cache --fix",
    "*.{js,svelte,css,md}": "prettier --write"
  }
}
