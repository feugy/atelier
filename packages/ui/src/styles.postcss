@import 'material-design-icons-iconfont';

.material-icons {
  vertical-align: -0.2em;
}

html,
body {
  @apply font-sans h-full overflow-hidden m-0;
  color: theme('colors.primary.text');
  background-color: theme('background.page');
}

body {
  @apply flex;
}

button {
  @apply outline-none;
  transition: transform 250ms;

  &:focus,
  &:hover {
    transform: scale(1.2);
  }
}
